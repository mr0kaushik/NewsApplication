<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/black_eg</item>
        <item name="colorPrimaryVariant">@color/black_cynical</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/black_eg</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_eg</item>
        <item name="colorSecondaryVariant">@color/heavy_grey</item>
        <item name="colorOnSecondary">@color/white_seven</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">@color/black_eg</item>


        <item name="fontFamily">@font/nunito</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="chipBackgroundColor">@drawable/bg_chip_state_list</item>
        <item name="android:textColor">@drawable/bg_text_chip_state_list</item>
        <item name="backgroundColor">#F7F7F7</item>
    </style>
</resources>